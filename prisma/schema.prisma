generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  hospitalName  String?
  createdAt     DateTime @default(now())

  medicalRecords MedicalRecord[]
  accessLogs     AccessLog[]
}

model Patient {
  id             Int      @id @default(autoincrement())
  name           String
  biometricHash  String   @unique
  bloodGroup     String?
  height         Float?
  weight         Float?
  allergies      String?
  createdAt      DateTime @default(now())

  medicalRecords MedicalRecord[]
  accessLogs     AccessLog[]
}

model MedicalRecord {
  id           Int      @id @default(autoincrement())
  patient      Patient  @relation(fields: [patientId], references: [id])
  patientId    Int
  doctor       User     @relation(fields: [doctorId], references: [id])
  doctorId     Int
  diagnosis    String
  prescription String
  notes        String?
  createdAt    DateTime @default(now())
}

model AccessLog {
  id         Int      @id @default(autoincrement())
  patient    Patient  @relation(fields: [patientId], references: [id])
  patientId  Int
  doctor     User?    @relation(fields: [doctorId], references: [id])
  doctorId   Int?
  accessType String
  accessedAt DateTime @default(now())
}